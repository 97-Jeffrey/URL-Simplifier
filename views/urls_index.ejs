<%- include('partials/_header') %>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>URL simplify</title>
</head>
<body>
  <% if (user){%>
  <main style="margin: 1em;">
    <h2 style="text-align: center; margin:40px; font-weight: 700;">My URL List</h2>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Original Long URL</th>
          <th scope="col">Edit URL</th>
          <th scope='col'>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <td><%= url %></td>
            <td><%= urls[url]["longURL"] %></td>
            <form action="/urls/<%= url%>" method="GET">
              <td><button class="btn btn-outline-primary btn-sm">Edit</button></td>
            </form>
            <form action='/urls/<%= url %>/delete' method="POST">
            <td><button class='btn btn-outline-danger btn-sm'>Delete</button></td>
          </form>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <%} else{%>
    <div class="alert alert-warning alert-dismissible fade show mt-5" role="alert">
      <strong>Ah Oh!</strong> To view your lists of urls, Please login first
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <a href="/login"><button class="btn btn-info ml-2">Login</button> </a>
    <a href="/register"><button class="btn btn-info ">Register</button> </a>
  <%} %>
  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
